<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <title>Links</title>
    <style>
        .mg{
            margin-left: 52%;
        }
    </style>
</head>
<body>


    <div class="container">  
        <h1>Links</h1>

        <a href="/add">Adicionar Link</a>
        
        <% for(let i= 0; i < links.length; i++) { %>
        <div class="card p-3 mb-3" id='<%=links[i]._id%>'>
            <form class="d-flex justfy-content-between align-items-center">
                <div class="d-flex flex-column">
                    <h2> <%=links[i].title%> </h2>
                    <div> <%=links[i].description%> </div>
                    <div class="text-muted"> <%=links[i].url%> </div>
                    <div class="text-info"> <i class="material-icons">bar_chart</i> Clicks: <%=links[i].click%> </div>
                </div>
                <div class="mg" >
                    <button class="btn-danger" onclick="deleteLink('<%=links[i]._id%>')")>Deletar</button>
                </div>
            </form>
        </div>
        <%} %>
    </div>

    <script>



        function deleteLink (id){
            fetch('/' + id, { method: 'DELETE' }).then(res=>{
                res.text().then(linkId=>{
                    console.log(linkId)
                    let a = document.getElementById(linkId)
                    a.remove()
                })
            })

        }

    </script>

</body>
</html>